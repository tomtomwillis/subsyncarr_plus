    "jest-mock": "^29.7.0",
    "lint-staged": "^15.2.10",
    "prettier": "3.3.2",
    "typescript": "~5.4.5",
    "typescript-eslint": "^7.13.0"
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write",
      "eslint --cache --fix"
    ],
    "*.json": "prettier --write",
    "*.yml": "prettier --write",
    "*.md": "prettier --write"
