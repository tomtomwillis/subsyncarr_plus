    "express": "^4.18.2",
    "node-cron": "^3.0.3",
    "ws": "^8.16.0"
  },
  "devDependencies": {
    "@babel/core": "^7.24.7",
    "@babel/preset-env": "^7.24.7",
    "@babel/preset-typescript": "^7.24.7",
    "@tsconfig/node18": "^18.2.4",
    "@types/better-sqlite3": "^7.6.8",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/node": "^22.10.10",
    "@types/node-cron": "^3.0.11",
